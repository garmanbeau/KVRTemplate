@{
    ViewData["Title"] = "Metrics";
}

<head>
    <title>Biology Lab Results</title>
    <style>
        table {
            border-collapse: collapse;
            width: 80%;
            margin: 20px 0;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>

    <h1>Biology Lab Metrics</h1>
    <hr />
    <p>
        Welcome to the Biology Lab! In this virtual reality environment, students are required to do x and y.
    </p>

    <h2>Students' Scores</h2>

    <!-- Display students' scores with additional columns -->
    <table>
        <tr>
            <th>Student</th>
            <th>Score</th>
            <th>Time Spent</th>
            <th>Wrong Selections</th>
        </tr>
        <!-- Example data -->
        <tr>
            <td>Student1</td>
            <td>85%</td>
            <td>30 minutes</td>
            <td>3</td>
        </tr>
        <tr>
            <td>Student2</td>
            <td>92%</td>
            <td>25 minutes</td>
            <td>1</td>
        </tr>
        <!-- Add more rows as needed -->
    </table>

    <h2>Time Spent Metrics</h2>

    <!-- Table for time spent metrics -->
    <table>
        <tr>
            <th>Student</th>
            <th>Time Spent</th>
            <th>Longest Time</th>
            <th>Average Time</th>
        </tr>
        <!-- Example data -->
        <tr>
            <td>Student1</td>
            <td>30 minutes</td>
            <td>35 minutes</td>
            <td>32 minutes</td>
        </tr>
        <tr>
            <td>Student2</td>
            <td>25 minutes</td>
            <td>30 minutes</td>
            <td>27 minutes</td>
        </tr>
        <!-- Add more rows as needed -->
    </table>

    <h2>Wrong Selections Metrics</h2>

    <!-- Table for wrong selections metrics -->
    <table>
        <tr>
            <th>Student</th>
            <th>Wrong Selections</th>
            <th>Most Wrong Selections (in one lab)</th>
            <th>Average Wrong Selections</th>
        </tr>
        <!-- Example data  -->
        <tr>
            <td>Student1</td>
            <td>3</td>
            <td>2</td>
            <td>2.5</td>
        </tr>
        <tr>
            <td>Student2</td>
            <td>1</td>
            <td>1</td>
            <td>1</td>
        </tr>
        <!-- Add more rows as needed -->
    </table>

</body>
